
@model MovieHub.ViewModels.UpcomingMovieViewModel

@{
    ViewBag.Title = "CreateView";
}

<h2>@Model.Heading</h2>

@using (Html.BeginForm(Model.Action, "UpcomingMovies"))
{
    <p class="alert alert-info">All fields are <strong>required</strong></p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.MovieName)
        @Html.TextBoxFor(m => m.MovieName, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.MovieName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Director)
        @Html.TextBoxFor(m => m.Director, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Director)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RunningTime)
        @Html.TextBoxFor(m => m.RunningTime, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RunningTime)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MovieGenreId)
        @Html.DropDownListFor(m => m.MovieGenreId, new SelectList(Model.MovieGenres, "Id", "Name"), "-- Select Genre --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MovieGenreId)
    </div>
    <button type="submit" class="btn btn-success">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}