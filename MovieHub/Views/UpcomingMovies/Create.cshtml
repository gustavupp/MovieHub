
@model MovieHub.ViewModels.UpcomingMovieViewModel

@{
    ViewBag.Title = "CreateView";
}

<h2>Add a Upcoming Movie</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie)
        @Html.TextBoxFor(m => m.Movie, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Director)
        @Html.TextBoxFor(m => m.Director, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RunningTime)
        @Html.TextBoxFor(m => m.RunningTime, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MovieGenre)
        @Html.DropDownListFor(m => m.MovieGenres, new SelectList(Model.MovieGenres, "Id", "Name"),"-- Select Genre --" ,new {@class="form-control"})
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
